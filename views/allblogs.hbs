<h1>Recent Blogs</h1>

{{#each blogs}}
  <div class="card" class="mx-auto" style="width: 50%" style="margin: auto;">
    <div class="card-body">
      <img
        class="card-img-top"
        id="blogCard"
        src={{this.photo}}
        width="250"
        height="300"
        alt={{this.title}}
      />
      <h5 class="card-title">{{this.title}}</h5>
      <p class="card-text">{{this.content}}...</p>
      <form action="/blog" method="POST">
        <input type="hidden" name="title" value={{this.title}} />
        <button type="submit">read more</button>
      </form>

    </div>
  </div>

{{else}}
  <div>
    <p>Sorry we are having trouble getting your blogs</p>
  </div>
{{/each}}