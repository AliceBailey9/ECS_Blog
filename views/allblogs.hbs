<div class+"container">

  <h1>all blogs will go here</h1>


  <ul>
    {{#each blogs}}
      <li>
      <div class="card" style="width: 18rem;">
  <div class="card-body">
  <img class="card-img-top" src={{this.photo}} width="180" height="100" alt={{this.title}}>
    <h5 class="card-title">{{this.title}}</h5>
    <p class="card-text">{{this.content}}...</p>
          <form action="/blog" method="POST">
        <input type="hidden" name="title" value={{this.title}} />
        <button type="submit">Find out more</button>
        </form>
    
  </div>
</div>
      </li>
    {{else}}
    <div>
        <p>Sorry we are having trouble getting your blogs</p>
    </div>
    {{/each}}
  </ul>
 
</div>